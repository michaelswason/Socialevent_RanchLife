<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <VideoView
            android:id="@+id/fragment_event_details_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="78dp"
            android:visibility="gone"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_event_details_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="78dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_gradient"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:id="@+id/fragment_event_details_layer_bg_action"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/bg_button_group_color"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/fragment_event_details_layer_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="invisible">

            <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
                android:id="@+id/fragment_event_details_btn_reserve"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:text="@string/i_am_interested"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/default_margin_small"
                android:layout_marginBottom="@dimen/default_margin_small"
                android:background="@drawable/bg_button_roundrose"/>
            <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
                android:id="@+id/fragment_event_details_btn_direction"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:text="@string/directions"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/default_margin_small"
                android:background="@drawable/bg_button_roundrose"/>
            <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
                android:id="@+id/fragment_event_details_btn_calendar"
                android:layout_width="165dp"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:text="@string/put_in_calendar"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/default_margin_small"
                android:background="@drawable/bg_button_roundrose"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_event_details_layer_plus"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/fragment_event_details_layer_actions" >
            <Button
                android:id="@+id/fragment_event_details_btn_expand"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/plus"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_event_details_layer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/fragment_event_details_layer_plus"
            android:background="@drawable/bg_event_action">

            <com.readinsite.ranchlife.ui.CustomFonts.TextViewLight
                android:id="@+id/fragment_event_details_tv_name"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/default_margin_small"
                android:layout_marginBottom="@dimen/default_margin_small"
                android:layout_marginTop="@dimen/default_margin_small"
                android:gravity="center_vertical"
                android:textSize="27sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_checked"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.readinsite.ranchlife.ui.RoundedImageView
                    android:id="@+id/fragment_event_details_iv_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_default"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textColor="@color/grey"/>
                    <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
                        android:id="@+id/fragment_event_details_tv_pa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/default_margin_smallest"
                        android:layout_marginRight="@dimen/default_margin_smallest"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_checked"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp">
        <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/primary_button_color"
            android:text="@string/date_and_time"/>
        <com.readinsite.ranchlife.ui.CustomFonts.TextViewLight
            android:id="@+id/fragment_event_details_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_margin_small"
            android:textSize="13sp"
            android:gravity="end"
            android:textColor="@color/grey"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_checked"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.readinsite.ranchlife.ui.CustomFonts.TextViewRegular
            android:id="@+id/fragment_event_details_tv_reservation_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_button_color"
            android:textSize="17sp"
            android:text="@string/no_reservation_required"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_checked"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">
        <com.readinsite.ranchlife.ui.CustomFonts.TextViewLight
            android:id="@+id/fragment_event_details_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small"
            android:layout_marginBottom="@dimen/default_margin_small"
            android:layout_marginRight="@dimen/default_margin_small"
            android:textSize="23sp"/>
        <com.readinsite.ranchlife.ui.CustomFonts.TextViewLight
            android:id="@+id/fragment_event_details_tv_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/default_margin_small"
            android:layout_marginRight="@dimen/default_margin_small"
            android:textSize="13sp"
            android:textColor="@color/grey"/>
    </LinearLayout>

</LinearLayout>